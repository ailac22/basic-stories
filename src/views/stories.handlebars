
<script defer src="/scripts/materializeInitializations.js" ></script>

<br/>
<h3>Your stories</h3>
<div>
{{#if stories}}
  {{#each stories}}
  <div class="card">
      <div class="card-content">
          <h5 class="card-title">{{this.title}}</h5> 
          <p class="">{{this.content}}</p>
      </div>
      <div class="card-action">
          <button class="waves-effect waves-light btn " >
            <i class="material-icons">edit</i>
          </button>
          <button class="waves-effect waves-light btn red modal-trigger" data-target="modalErase">
            <i class="material-icons">
            delete
            </i>
          </button>

          <div id="modalErase" class="modal">
          <div class="modal-content">
          <h5>Erase story</h5>
          <p>Are you sure you want to delete this story?</p> 
          </div>
          <div class="modal-footer">
            <form method="POST" action="/{{this._id}}?_method=DELETE" >
            <a class="modal-close waves-effect btn-flat">Cancel</a> 
            <button type="submit" value="Delete" class="btn-small waves-effect red">Delete</button>

          </form>
   </div>
</div>
      </div>
  </div>
  {{/each}}
{{else}}
  <h3>Aun no tienes historias creadas</h3>
{{/if}}
</div>
<!-- create button -->
<div class="fixed-action-btn">
  <a class="btn-floating btn-large waves-effect waves-light red" href="/add">
    <i class="material-icons">add</i>
  </a>    
</div>

