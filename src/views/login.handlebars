<h1>Login page</h1>

{{#if loginFailed}} 
<div class="row">       
    <div class="col s6 offset-l3">
        <div class="error">Username or password not found</div>
    </div>
</div>
{{/if}}
<div class="row">
    <div class="col l6 offset-l3">
        <form method="POST">
            <div class="input-field">
                <label class="active" for="title">Username: </label>
                <input id="username" name="username" type="text" />
            </div>
            <div class="input-field">
                <label class="active" for="password">Password: </label>
                <input id="password" name="password" type="password" />
            </div>
            <input type="submit" class="btn" value="Login" />
        </form>
        <p>Don't have an account? <span class="fu">Fuck you.</span> <a href="/register">Sign up</a>
    </div>
</div>
